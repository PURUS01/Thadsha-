rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // profile collection: public read, admin-only write
    match /profile/{docId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == 'ADMIN_UID' || request.auth.token.admin == true);
    }

    // skills, projects, theme collections
    match /{coll=skills|projects|theme}/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == 'ADMIN_UID' || request.auth.token.admin == true);
    }
  }
}
